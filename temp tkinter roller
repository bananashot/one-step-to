# Set-up the window
window = tk.Tk()
window.title("dice roller")
window.resizable(width=True, height=True)

# Create the Fahrenheit entry frame with an Entry
# widget and label in it
frm_entry = tk.Frame(master=window)
tries = tk.Entry(master=frm_entry, width=10)
lbl_temp = tk.Label(master=frm_entry, text="roll")

# Layout the temperature Entry and Label in frm_entry
# using the .grid() geometry manager
tries.grid(row=0, column=0, sticky="e")
lbl_temp.grid(row=0, column=1, sticky="w")

# Create the conversion Button and result display Label
btn_convert = tk.Button(
    master=window,
    text="\N{RIGHTWARDS BLACK ARROW}",
    command=random_n_tries
)
lbl_result = tk.Label(master=window, text="Roll this shit, I'm out!")

# Set-up the layout using the .grid() geometry manager
frm_entry.grid(row=0, column=0, padx=10)
btn_convert.grid(row=0, column=1, pady=10)
lbl_result.grid(row=3, column=0, pady=30)

# Run the application
window.mainloop()
